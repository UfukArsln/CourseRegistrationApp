@model IEnumerable<Ogrenci>

    <h2>Öğrenci Listesi</h2>
    <hr>

    <a asp-controller="Ogrenci" asp-action="Create" class="btn btn-secondary">Öğrenci Kayıt</a>
    <hr>

    <table class="table border">
        <thead>
            <tr>
                <th style="width: 150px;">@Html.DisplayNameFor(m => m.OgrenciId)</th>
                <th>@Html.DisplayNameFor(m => m.OgrenciAd)</th>
                <th>@Html.DisplayNameFor(m => m.OgrenciSoyad)</th>
                <th style="width: 150px;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.OgrenciId)</td>
                <td>@Html.DisplayFor(modelItem => item.OgrenciAd)</td>
                <td>@Html.DisplayFor(modelItem => item.OgrenciSoyad)</td>
                <td>
                    <a asp-controller="Ogrenci" asp-action="Edit" asp-route-id="@item.OgrenciId"
                        class="btn btn-primary">Düzenle</a>
                    <a asp-controller="Ogrenci" asp-action="Delete" asp-route-id="@item.OgrenciId"
                        class="btn btn-danger">Sil</a>
                </td>
            </tr>
            }
        </tbody>
    </table>