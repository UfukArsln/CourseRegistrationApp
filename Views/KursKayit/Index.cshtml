@model IEnumerable<KursKayit>

    <h2>Kayıtlı Öğrenci Listesi</h2>
    <hr>

    <a asp-controller="KursKayit" asp-action="Create" class="btn btn-secondary">Öğrenci Kurs Kayıt</a>
    <hr>

    <table class="table border">
        <thead>
            <tr>
                <th style="width: 150px;">@Html.DisplayNameFor(m => m.KayitId)</th>
                <th>@Html.DisplayNameFor(m => m.Ogrenci.OgrenciAd)</th>
                <th style="width: 375px;">@Html.DisplayNameFor(m => m.Kurs.Baslik)</th>
                <th style="width: 250px;">@Html.DisplayNameFor(m => m.KayitTarihi)</th>
                <th style="width: 150px;"></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var item in Model)
            {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.KayitId)</td>
                <td>@Html.DisplayFor(modelItem => item.Ogrenci.AdSoyad)</td>
                <td>@Html.DisplayFor(modelItem => item.Kurs.Baslik)</td>
                <td>@Html.DisplayFor(modelItem => item.KayitTarihi)</td>
                <td>
                    <a asp-controller="KursKayit" asp-action="Edit" asp-route-id="@item.KayitId"
                        class="btn btn-primary">Düzenle</a>
                    <a asp-controller="KursKayit" asp-action="Delete" asp-route-id="@item.KayitId"
                        class="btn btn-danger">Sil</a>
                </td>
            </tr>
            }
        </tbody>
    </table>